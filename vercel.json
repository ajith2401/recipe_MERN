{
  "version": 2,
  "builds": [
    { 
      "src": "server/index.js", 
      "use": "@vercel/node" 
    },
    { 
      "src": "client/package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "dist",
        "buildCommand": "npm run build"
      } 
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "^/assets/(.*)", "dest": "client/dist/assets/$1" },
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|ico|json))", "dest": "client/dist/$1" },
    { "src": "/(post|chat|profile|login|updateprofile)(.*)", "dest": "server/index.js" },
    { "src": "/(.*)", "dest": "server/index.js" }
  ],
  "outputDirectory": "client/dist"
}